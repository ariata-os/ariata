# Environment Configuration
ENVIRONMENT=development

# Server Configuration
# For local development:
PUBLIC_IP=localhost
FRONTEND_URL=http://localhost:3000

# When using Tailscale (recommended for remote access):
# PUBLIC_IP=100.64.x.x  # Your Tailscale IP (run 'tailscale ip -4' to find it)
# FRONTEND_URL=http://100.64.x.x:3000

# PROCESSING_SERVICE_URL=http://processing:8001  # Removed - processing service no longer needed

# Database Configuration
DB_USER=ariata_user
DB_PASSWORD=ariata_password
DB_NAME=ariata
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_USE_SSL=false

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here!

# Service Ports
WEB_PORT=3000
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
REDIS_PORT=6379
# PROCESSING_PORT=8001  # Removed - processing service no longer needed
POSTGRES_PORT=5432

################################################
#             Source-specific envs             #
################################################

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://auth.ariata.com/google/callback

# Notion OAuth Configuration
NOTION_CLIENT_ID=your-notion-client-id-here
NOTION_CLIENT_SECRET=your-notion-client-secret-here
NOTION_REDIRECT_URI=https://auth.ariata.com/notion/callback

# Strava OAuth Configuration
STRAVA_CLIENT_ID=your-strava-client-id-here
STRAVA_CLIENT_SECRET=your-strava-client-secret-here

# Mac CLI Code Signing (optional, for signed releases)
# Find your identity: security find-identity -v -p codesigning
CODESIGN_IDENTITY="Developer ID Application: Your Name (TEAMID)"
APPLE_TEAM_ID=TEAMID
# For notarization (optional):
APPLE_ID=your-apple-id@example.com
APPLE_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx  # App-specific password from appleid.apple.com
